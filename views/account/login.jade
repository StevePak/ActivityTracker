extend ../layout

block content
    h1#head User Authentication
    h2 Please enter login information
    if (error && error != "")
        .alert.alert-danger(role="alert") #{error}
    if (message && message != "")
        .alert.alert-success(role="alert") #{message}
    
    form(method="post")
        .form-group
            label(for="username") Username:
            input.form-control(type="text", name="username")
        .form-group
            label(for="password") Password:
            input.form-control(type="password", name="password")
        input.btn.btn-primary(type="submit", value="Log In")