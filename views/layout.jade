doctype
html
  head
    title Activity Tracker 
    link(rel='stylesheet', href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css", integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u", crossorigin='anonymous')
    link(rel='stylesheet', href="/css/site.css")
    block stylesheets
  body
    nav.navbar.navbar-default
      .container
        .navbar-header
          button.navbar-toggle.collapsed(type="button", data-toggle="collapse", data-target="#navbar", aria-expanded="false", aria-controls="navbar")
            span.sr-only Toggle navigation
            span.icon-bar
            span.icon-bar
            span.icon-bar
          a.navbar-brand(href="/") Activity Tracker
        #navbar.navbar-collapse.collapse
          ul.nav.navbar-nav
            li
              a(href="/") Home
            if login
              li.dropdown
                a.dropdown-toggle(data-toggle="dropdown", role="button", aria-haspopup="true", aria-expanded="false", href="#")
                  | Activities 
                  span.caret
                ul.dropdown-menu
                  li
                    a(href="/activities/create") Create
                  li
                    a(href="/activities/calendar") Calendar
          ul.nav.navbar-nav.navbar-right
            li
              if login
                li.dropdown
                  a.dropdown-toggle(data-toggle="dropdown", role="button", aria-haspopup="true", aria-expanded="false", href="#")
                    | #{user.name} 
                    span.caret
                  ul.dropdown-menu
                    li
                      a(href="/account/logout") Log Out
              else
                a(href="/account/login") Log In
    .container
      .main-content
        if (error && error != "")
          .alert.alert-danger(role="alert") #{error}
        if (info && info != "")
          .alert.alert-info(role="alert") #{info}
        if (success && success != "")
          .alert.alert-success(role="alert") #{success}
        block content
    footer
